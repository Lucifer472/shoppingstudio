// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"  
}

// Models
enum gender {
  Male
  Female
}

enum type {
  admin
  writer
  user
}

enum isIndex {
  one
  two
  three
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String
  img       String
  bio       String
  gender    gender   @default(Male)
  dob       String   @default("2000-01-01")
  facebook  String
  instagram String
  linkedin  String
  twitter   String
  blogs     blog[]
}

model blog {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now())
  title       String
  url         String   @unique
  img         String
  keywords    String
  description String
  author      String?
  blog        Json
  category    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Author   user?   @relation(fields: [author], references: [username])

  faq     Json?     

  @@index([author])
}
